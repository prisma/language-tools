    datasource db   {
  provider  =           "sqlite"

}

generator client    {
    provider   =            "prisma-client-js"
}

model   Post {
  id        Int      @id   @default(autoincrement(     ))
  title     PostTitle[]
    content    String?
  published Boolean          @default(false         )
  author    User?        @relation(fields: [authorId],      references: [id])
  authorId          Int?
}



        model User {
  id    Int @id     @default(      autoincrement())  
  email     String  @unique
    name        String?
    posts                 Post[]
  
    }

    model PostTitle {
  id   Int   @id @default(autoincrement()) 
  title       String
}