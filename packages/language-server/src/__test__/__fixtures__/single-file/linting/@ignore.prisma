datasource db {
    provider = "sqlite"

}

generator client {
    provider = "prisma-client-js"
}

model Post {
    id        Int     @id @default(autoincrement())
    title     String
    content   String? @ignore
    published Boolean @default(false)
    author    User?   @relation(fields: [authorId], references: [id])
    authorId  Int?
}

model User {
    id    Int     @id @default(autoincrement())
    email String  @unique
    name  String?
    posts Post[]
}
