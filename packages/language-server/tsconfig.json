{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["ES2021"],
    "outDir": "dist",
    "noUnusedLocals": false,
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/lib/**/*", "src/**/*.json"],
  "exclude": ["node_modules", ".vscode-test", "**/__fixtures__"]
}
