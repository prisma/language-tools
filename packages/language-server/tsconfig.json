{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "Node16",
    "target": "es6",
    "outDir": "dist",
    "noUnusedLocals": false,
    "lib": ["es6"],
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "composite": true,
    "rootDir": "./src",
    "typeRoots": ["./node_modules/@types"],
    "skipLibCheck": true
  },
  "include": ["src/**/*", "src/lib/**/*", "src/**/*.json"],
  "exclude": ["node_modules", ".vscode-test"]
}
