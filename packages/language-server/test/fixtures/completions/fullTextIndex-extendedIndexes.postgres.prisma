generator js {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextIndex", "extendedIndexes"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model FulltextEmpty {
  id      Int    @id
  title   String
  content String @db.Text

  @@fulltext()
}

model Fulltext {
  id      Int    @id
  title   String
  content String @db.Text

  @@fulltext([title, content], )
}

model Type {
  id    Int @id
  value Int

  @@index([value], type: )
}
