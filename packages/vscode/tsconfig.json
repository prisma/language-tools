{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "module": "ESNext",
    "noUnusedLocals": true,
    "target": "es6",
    "outDir": "dist",
    "lib": ["es6"],
    "sourceMap": true,
    "esModuleInterop": true,
    "strict": true,
    "composite": true,
    "declaration": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler"
  },
  "include": ["src", "tests/playwright", "playwright.config.ts"],
  "exclude": ["node_modules", ".vscode-test"]
}
