{
  "name": "@prisma/language-support",
  "version": "1.0.0",
  "author": "Prisma",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "@types/node": "14.0.13",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "4.2.3",
    "lerna": "^3.22.1",
    "lint-staged": "10.1.2",
    "prettier": "2.0.5",
    "typescript": "3.8.3"
  },
  "scripts": {
    "build": "tsc -b",
    "postinstall": "lerna bootstrap",
    "format": "prettier   \"packages/**/*.{ts,js,json,md}\"   --write",
    "lint": "eslint  \"packages/**/*.{js,ts,css,json,md} --fix --ext",
    "compile": "cd packages/language-server && npm run build && cd ../vscode && npm run build && cd .. && cd ..",
    "watch": "npm run build -- -w",
    "vscode:prepublish": "tsc --build --clean && npm run compile",
    "vsce:publish": "sh scripts/publish.sh",
    "vsce:check": "yarn shell:lint && sh scripts/check-update.sh",
    "vsce:bump": "sh scripts/bump.sh",
    "test": "sh ./scripts/e2e.sh",
    "shell:lint": "shellcheck -x scripts/*.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
