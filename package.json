{
  "name": "prisma",
  "displayName": "Prisma",
  "description": "Adds syntax highlighting, formatting, auto-completion, jump-to-definition and linting for .prisma files.",
  "version": "0.0.27",
  "license": "Apache-2.0",
  "icon": "logo_white.png",
  "engines": {
    "vscode": "^1.34.0"
  },
  "publisher": "Prisma",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/prisma/vscode"
  },
  "main": "./out/src/extension",
  "contributes": {
    "languages": [
      {
        "id": "prisma",
        "aliases": [
          "Prisma",
          "prisma"
        ],
        "extensions": [
          ".prisma"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prisma",
        "scopeName": "source.prisma",
        "path": "./syntaxes/prisma.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "rm -rf *.vsix && rm -rf out && npm run compile",
    "watch": "tsc -w",
    "compile": "tsc -p ./",
    "format": "prettier --write src/**/*.ts",
    "postinstall": "node ./node_modules/vscode/bin/install",
    "vsce:publish": "sh scripts/publish.sh",
    "vsce:check": "yarn shell:lint && sh scripts/check-update.sh",
    "shell:lint": "shellcheck -x scripts/*.sh"
  },
  "activationEvents": [
    "onLanguage:prisma"
  ],
  "dependencies": {
    "@prisma/get-platform": "0.1.x"
  },
  "devDependencies": {
    "@types/node": "12.12.14",
    "husky": "3.1.0",
    "prettier": "1.19.1",
    "typescript": "3.7.2",
    "vsce": "1.74.0",
    "vscode": "1.0.3"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  }
}
