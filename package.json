{
  "name": "prisma-lsp",
  "displayName": "Prisma Extension Language Server",
  "description": "Adds syntax highlighting, formatting, auto-completion, jump-to-definition and linting for .prisma files.",
  "version": "0.0.31",
  "license": "Apache-2.0",
  "icon": "logo_white.png",
  "engines": {
    "vscode": "^1.43.0"
  },
  "publisher": "Prisma",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
    "type": "github",
    "url": "https://github.com/prisma/vscode"
  },
  "main": "./client/out/extension",
  "contributes": {
    "languages": [
      {
        "id": "prisma",
        "aliases": [
          "Prisma",
          "prisma"
        ],
        "extensions": [
          ".prisma"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "prisma",
        "scopeName": "source.prisma",
        "path": "./syntaxes/prisma.tmLanguage.json"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Language server configuration",
      "properties": {
        "languageServerExample.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "languageServerExample.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "watch": "tsc -b -w",
    "compile": "tsc -b",
    "format": "prettier --write client/src/**/*.ts && prettier --write server/src/**/*.ts",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd .. ",
    "vsce:publish": "sh scripts/publish.sh",
    "vsce:check": "yarn shell:lint && sh scripts/check-update.sh",
    "shell:lint": "shellcheck -x scripts/*.sh"
  },
  "activationEvents": [
    "onLanguage:prisma"
  ],
  "devDependencies": {
    "@types/node": "^12.12.0",
    "husky": "3.1.0",
    "prettier": "1.19.1",
    "typescript": "^3.8.3",
    "vsce": "1.74.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run format"
    }
  },
  "prettier": {
    "semi": false,
    "trailingComma": "all",
    "singleQuote": true
  }
}
