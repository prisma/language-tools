{
  "name": "@prisma/language-support",
  "version": "1.0.0",
  "author": "Prisma",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@actions/github": "4.0.0",
    "@commitlint/cli": "^9.1.2",
    "@commitlint/config-conventional": "9.1.1",
    "@commitlint/config-lerna-scopes": "9.1.1",
    "@types/node": "14.0.27",
    "@typescript-eslint/eslint-plugin": "3.7.1",
    "@typescript-eslint/parser": "3.7.1",
    "eslint": "7.6.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "husky": "4.2.5",
    "jest": "26.2.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.11",
    "mocha": "8.1.0",
    "prettier": "2.0.5",
    "typescript": "3.9.7",
    "vsce": "1.77.0",
    "yarn": "1.22.4",
    "ovsx": "0.1.0-next.dacd2fd"
  },
  "scripts": {
    "build": "tsc -b",
    "postinstall": "cd packages/language-server && npm install && cd ../vscode && npm install && cd .. && cd .. ",
    "format": "prettier   \"packages/**/*.{ts,js,json,md}\"   --write",
    "lint": "eslint  \"packages/**/*.{js,ts}\" --fix",
    "compile": "cd packages/language-server && npm run build && cd ../vscode && npm run build && cd .. && cd ..",
    "watch": "npm run build -- -w",
    "shell:lint": "shellcheck -x scripts/**/*.sh",
    "test": "sh scripts/e2e.sh",
    "testScripts": "jest __tests__",
    "openvsx:publish": "cd packages/vscode && ovsx publish -p",
    "check_for_update": "sh scripts/check_for_update.sh",
    "bump_prisma_version_in_scripts": "sh scripts/bump_prisma_version.sh",
    "bump_extension_version_in_scripts": "node scripts/bump_extension_version.js",
    "setup:branch": "sh scripts/setup_branch.sh",
    "change_readme": "sh scripts/change_readme.js",
    "bump_versions_in_repo": "sh scripts/update_versions.sh",
    "bump_lsp_version_in_scripts": "node scripts/bump_lsp_version.js",
    "get_tag_name": "sh scripts/get_tag_name.sh",
    "get_current_patch_tag": "sh scripts/get_current_patch_tag.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,css,json,md}": [
      "prettier --write"
    ],
    "packages/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}