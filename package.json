{
  "name": "@prisma/language-support",
  "version": "1.0.0",
  "author": "Prisma",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "prettier": "2.0.5",
    "lint-staged": "10.1.2",
    "husky": "4.2.3",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.1",
    "eslint-plugin-prettier": "3.1.2",
    "@typescript-eslint/eslint-plugin": "2.27.0",
    "@typescript-eslint/parser": "2.27.0",
    "@types/node": "12.12.0",
    "@commitlint/cli": "^8.1.0",
    "@commitlint/config-conventional": "^8.1.0",
    "@commitlint/config-lerna-scopes": "^8.1.0",
    "typescript": "3.8.3"
  },
  "scripts": {
    "build": "tsc -b",
    "postinstall": "cd packages/language-server && npm install && cd ../vscode && npm install && cd .. && cd ..",
    "format": "prettier   \"packages/**/*.{ts,js,json,md}\"   --write",
    "lint": "eslint  \"packages/**/*.{js,ts,css,json,md} --fix --ext",
    "compile": "cd packages/language-server && npm run build && cd ../vscode && npm run build && cd .. && cd ..",
    "watch": "npm run build -- -w",
    "test": "sh ./packages/vscode/scripts/e2e.sh"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "packages/**/*.{js,ts}": [
      "eslint --fix"
    ]
  }
}
