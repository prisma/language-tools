{
  "name": "language-tools",
  "private": true,
  "version": "31.0.1189",
  "author": "Prisma",
  "license": "Apache-2.0",
  "engines": {
    "node": ">=16",
    "npm": ">=7"
  },
  "devDependencies": {
    "@actions/github": "5.0.3",
    "@commitlint/cli": "17.0.3",
    "@commitlint/config-conventional": "17.0.3",
    "@commitlint/config-lerna-scopes": "17.0.2",
    "@types/node": "14.18.21",
    "@typescript-eslint/eslint-plugin": "5.30.5",
    "@typescript-eslint/parser": "5.30.5",
    "@vscode/test-electron": "2.1.5",
    "eslint": "8.19.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.2.1",
    "execa": "5.1.1",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "jest": "28.1.2",
    "lerna": "5.1.8",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "semver": "7.3.7",
    "typescript": "4.7.4",
    "vsce": "2.9.2"
  },
  "scripts": {
    "bootstrap": "lerna exec -- npm install",
    "build": "tsc -b",
    "format": "prettier \"packages/**/*.{ts,js,json,md}\" --write",
    "lint": "eslint \"packages/**/*.{js,ts}\" --fix",
    "compile": "lerna run build",
    "watch": "lerna run build -- -w",
    "shell:lint": "shellcheck -x scripts/*.sh",
    "test": "sh scripts/e2e.sh",
    "test:e2e": "sh scripts/e2eTestsOnVsix/test.sh",
    "testScripts": "jest __tests__",
    "test:bump": "sh scripts/e2eTestsOnVsix/bump_version.sh",
    "prepare": "is-ci || husky install"
  },
  "publishConfig": {
    "access": "public"
  },
  "lint-staged": {
    "*.{js,ts,css,md,yml}|**/syntaxes/*.json|completions.json": [
      "prettier --write"
    ],
    "*.{js,ts}": [
      "eslint --fix"
    ]
  }
}